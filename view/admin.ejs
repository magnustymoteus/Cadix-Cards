<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CC User Manager</title>
    <link rel="icon" href="favicon.ico?v=1.1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-default container">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>                        
              </button>
              <a class="navbar-brand" href="/home">Cadix Cards</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
              <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
                <li style="opacity:0.5"><a href="shop">Shop</a></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <% if (logged) { %>
                  <li class="active"><a href="#"><%= name_string %></a></li>
                  <li class="active"><a href="admin">Manager</a></li> 
                  <li><a href="/logout">Uitloggen</a></li>
              <% } else { %>
                <li><a href="/register">Registreren</a></li>
                <li><a href="/login">Inloggen</a></li>
                <% } %>
              </ul>
            </div>
          </div>
        </nav>
        <div class="container">
            <h2>Cadix Cards Accounts</h2>
            <p>Je bent een <strong><%= adminType %>.</strong></p>            
        <table class="table table-bordered">
            <thead>
              <tr>
                <th>ID</th>
                <th>Naam</th>
                <th>Voornam</th>
                <th>Geboortedatum</th>
                <th>Geslacht</th>
                <th>Straat</th>
                <th>Huisnummer</th>
                <th>Bus</th>
                <th>Postcode</th>
                <th>Gemeente</th>
                <th>Land</th>
                <th>Telefoonnummer</th>
                <th>Email</th>
                <th>Admin</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((user) => { %>
                <tr onclick="window.location='/admin/user?id=<%=user.klantID%>';">
                  <% for(let i=0;i<Object.values(user).length;i++) { %>
                    <td><%=(typeof(Object.values(user)[i])=='object')?Object.values(user)[i].toLocaleDateString():Object.values(user)[i]%></td>
                    <% } %>
                </tr>
              
              <% }); %>
            </tbody>
            </table>
        </div>
      </header>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</body>
</html>